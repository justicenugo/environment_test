<%= link_to 'HOME', books_path %>

<div class = "books delete">
    <h2>Delete Book</h2>
    <%= form_for(@book, :method => 'delete') do |f| %>
        <p>Alert! You are about to delete <%= @book.title %> by <%= @book.author %> </p>
        <p>Do you really want to delete this book?</p>
        <p><%= @book.title %></p>

        <%= f.submit("Delete Book") %>
    <% end %>
</div>

<%= link_to 'Delete', delete_book_path(@book) %> |
<%= link_to 'Back', books_path %>